{
  "manifest_version": 3,
  "name": "My Elm Extension",
  "version": "1.0",
  "description": "A simple cross-browser extension built with Elm",
  "action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "permissions": ["storage"]
}

